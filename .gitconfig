[user]
	name = Trent Scheffert
	email = trent.scheffert@gmail.com

[core]
    # TODO: Not cross platform!
    editor = vim

[color]
    ui = auto
    status = auto
    branc = auto
    diff = never

[push]
	default = simple

[merge]
    tool = p4merge
    prompt = false
	trustExitCode = false
	keepBackup = false

[mergetool "p4merge"]
	cmd = p4merge.exe $BASE $LOCAL $REMOTE $MERGED

[diff]
	tool = p4merge

[difftool "p4merge"]
	cmd = p4merge.exe $LOCAL $REMOTE
