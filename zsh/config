# shopt -s checkwinsize

# # Autocorrect typos in path names when using `cd`
# shopt -s cdspell;


# --- Path ---

# Don't allow duplicates in the path. Keep the left-most item
typeset -U path

prepend_to_path "$HOME/bin"


