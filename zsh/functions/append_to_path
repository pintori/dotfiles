# vi: ft=zsh

# Safely, idempotently, append to path
function append_to_path() {
  for d; do
    d=$(cd -- "$d" && { pwd -P || pwd; }) 2>/dev/null # canonicalize symbolic links (? what?)
    if [ -z "$d" ]; then continue; fi # skip nonexistent directory
    case ":$PATH:" in
        *":$d:"*) :;;
        *) PATH=$PATH:$d;;
    esac
  done
}

