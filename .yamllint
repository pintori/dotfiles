# vi: ft=yaml
---

rules:
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 0
  colons: disable
  commas: disable
  comments:
    level: warning
    require-starting-space: yes
    min-spaces-from-content: 1
  comments-indentation: disable
  document-end: disable
  document-start:
    level: warning
    present: yes
  empty-lines:
    max: 2
    max-start: 0
    max-end: 0
  hyphens:
    max-spaces-after: 1
  indentation:
    spaces: consistent
    indent-sequences: yes
    check-multi-line-strings: no
  key-duplicates: enable
  line-length:
    max: 150
    allow-non-breakable-words: yes
  new-line-at-end-of-file: enable
  new-lines:
    type: unix
  trailing-spaces: enable
